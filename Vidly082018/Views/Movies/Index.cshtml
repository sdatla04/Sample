@model IEnumerable<Vidly082018.Models.Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>

@using (Html.BeginForm("New", "Movies"))
{
    <button type="submit" class="btn btn-primary">New Movie</button>
}

@if (!Model.Any())
{
    <text> There are No MOVIES available </text>
}

else
{
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Movie</th>
                <th scope="col">Genre</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model)
            {
            <tr class="table-secondary">
                @* <td>@Html.ActionLink(movie.Name, "Details", "Movies", new { id = movie.Id }, null)</td>
                *@
                <td>@Html.ActionLink(movie.Name,"Edit","Movies",new { id=movie.Id},null)</td>
                <td>@movie.Genre.Name</td>
            </tr>
            }
        </tbody>
    </table>    

}
